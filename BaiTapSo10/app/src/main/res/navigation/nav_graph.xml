<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/listStudentFragment">

    <fragment
        android:id="@+id/listStudentFragment"
        android:name="com.example.baitapso10.fragments.ListStudentFragment"
        android:label="Danh Sách Sinh Viên">
        <action
            android:id="@+id/action_listStudentFragment_to_addStudentFragment"
            app:destination="@id/addStudentFragment" />
        <action
            android:id="@+id/action_listStudentFragment_to_editStudentFragment"
            app:destination="@id/editStudentFragment" />
    </fragment>

    <fragment
        android:id="@+id/addStudentFragment"
        android:name="com.example.baitapso10.fragments.AddStudentFragment"
        android:label="Thêm Sinh Viên" />

    <fragment
        android:id="@+id/editStudentFragment"
        android:name="com.example.baitapso10.fragments.EditStudentFragment"
        android:label="Sửa Sinh Viên" />

</navigation>